{
    "name": "ave-ui",
    "version": "0.0.2",
    "description": "avernakis ui",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "license": "MIT",
    "keywords": [
        "gui",
        "desktop",
        "avernakis",
        "ave"
    ],
    "homepage": "https://qber-soft.github.io/Ave-Nodejs-Docs/",
    "repository": {
        "type": "git",
        "url": "https://github.com/qber-soft/Ave-Nodejs"
    },
    "author": {
        "name": "ivjtk",
        "contributors": [
            {
                "name": "rerender2021"
            }
        ]
    },
    "files": [
        "build",
        "lib"
    ],
    "scripts": {
        "prepare": "cd ../../.. && husky install .husky",
        "dev:unit": "tsnd --respawn --transpile-only ./examples/unit/index.ts",
        "dev:unit:debug": "cross-env AVE_BUILD_ENV=DEBUG_BUILD npm run dev:unit",
        "dev:app": "tsnd --respawn --transpile-only ./examples/app/index.ts",
        "prebuild": "del-cli ./build",
        "build": "tsc --build",
        "release": "npm run build && npm publish",
        "format": "prettier --write \"{src,examples}/**/*.{js,jsx,ts,tsx,md,mdx}\""
    },
    "devDependencies": {
        "@types/node": "^8.0.14",
        "cross-env": "^7.0.3",
        "del-cli": "^4.0.1",
        "husky": "^7.0.4",
        "prettier": "^2.6.0",
        "pretty-quick": "^3.1.3",
        "ts-node-dev": "^1.1.6",
        "typescript": "^3.2.2"
    }
}
