{
	"name": "ave-ui",
	"version": "0.1.10",
	"description": "avernakis ui",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"license": "MIT",
	"keywords": [
		"gui",
		"desktop",
		"avernakis",
		"ave"
	],
	"homepage": "https://qber-soft.github.io/Ave-Nodejs-Docs/",
	"repository": {
		"type": "git",
		"url": "https://github.com/qber-soft/Ave-Nodejs"
	},
	"author": {
		"name": "ivjtk",
		"contributors": [
			{
				"name": "rerender2021"
			}
		]
	},
	"files": [
		"build",
		"lib"
	],
	"scripts": {
		"prepare": "cd ../../.. && husky install .husky",
		"dev:unit": "tsnd --respawn ./examples/unit/index.ts",
		"dev:unit:debug": "cross-env AVE_BUILD_ENV=DEBUG_BUILD npm run dev:unit",
		"dev:app": "tsnd --respawn ./examples/app/index.ts",
		"dev:app:debug": "cross-env AVE_BUILD_ENV=DEBUG_BUILD npm run dev:app",
		"prebuild": "del-cli ./build",
		"build": "tsc --build",
		"preexamples:build": "del-cli ./build",
		"examples:build": "tsc --build examples-tsconfig.json",
		"postexamples:build": "npm run examples:copy:lib && npm run examples:copy:res && npm run examples:copy:assets",
		"preexamples:pack": "npm run examples:build && del-cli ./bin/ave-app.exe",
		"examples:pack": "ave-pack pack",
		"examples:copy:lib": "copyfiles ./lib/* ./build",
		"examples:copy:res": "cd ../../.. && copyfiles -u 1 \"./Resource/{Language,Data}/*\" \"./Code/Avernakis Nodejs/Test-Nodejs/build\"",
		"examples:copy:assets": "copyfiles ./examples/**/*.png ./build",
		"release": "npm run build && npm publish",
		"test": "jest",
		"format": "prettier --write \"{src,examples}/**/*.{js,jsx,ts,tsx,md,mdx}\""
	},
	"devDependencies": {
		"@types/jest": "^29.2.2",
		"@types/node": "^8.0.14",
		"ave-pack": "^0.9.4",
		"copyfiles": "^2.4.1",
		"cross-env": "^7.0.3",
		"del-cli": "^4.0.1",
		"husky": "^7.0.4",
		"jest": "^29.2.2",
		"prettier": "^2.6.0",
		"pretty-quick": "^3.1.3",
		"ts-jest": "^29.0.3",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.6.2"
	}
}
